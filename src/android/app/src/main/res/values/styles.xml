<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Material Design 3.0 theme implementation for Art Knowledge Graph app
    - Implements light theme attributes
    - Maintains accessibility standards (4.5:1 contrast ratio)
    - Supports system bars customization
    - Provides standardized widget styles
    
    Dependencies:
    - com.google.android.material:material:1.9.0
-->
<resources>
    <!-- Base application theme -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Material color attributes -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@color/colorBackground</item>
        
        <!-- System bars customization -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <!-- Launch screen theme -->
    <style name="Theme.App.Launcher" parent="Theme.App">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- Standard button style -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <!-- Icon button style -->
    <style name="Widget.App.Button.Icon" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="iconPadding">8dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">24dp</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
</resources>