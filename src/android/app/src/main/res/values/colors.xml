<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Material Design 3.0 color system implementation for light theme
    - Follows Material Design color system guidelines
    - Supports dynamic theming
    - Ensures minimum contrast ratio of 4.5:1 for accessibility
    - Provides color resources for graph visualization
-->
<resources>
    <!-- Core Material Design 3.0 Colors -->
    <color name="colorPrimary">#FF6200EE</color>
    <color name="colorPrimaryDark">#FF3700B3</color>
    <color name="colorAccent">#FF03DAC5</color>

    <!-- Surface Colors -->
    <color name="colorBackground">#FFFFFFFF</color>
    <color name="colorSurface">#FFFFFFFF</color>
    <color name="colorError">#FFB00020</color>

    <!-- On Colors (Text/Icon colors for contrast) -->
    <color name="colorOnPrimary">#FFFFFFFF</color>
    <color name="colorOnSecondary">#FF000000</color>
    <color name="colorOnBackground">#FF000000</color>
    <color name="colorOnSurface">#FF000000</color>
    <color name="colorOnError">#FFFFFFFF</color>

    <!-- Graph Visualization Colors -->
    <color name="graphNodeDefault">#FF6200EE</color>
    <color name="graphNodeSelected">#FF03DAC5</color>
    <color name="graphEdgeDefault">#80000000</color>
    <color name="graphEdgeHighlight">#FF6200EE</color>
</resources>