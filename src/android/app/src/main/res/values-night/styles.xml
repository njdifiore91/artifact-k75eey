<?xml version="1.0" encoding="utf-8"?>
<!-- Dark theme styles optimized for OLED displays following Material Design 3.0 guidelines -->
<!-- Implements WCAG 2.1 Level AA accessibility standards with enhanced contrast ratios -->
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme extending Material Design dark theme -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Material color attributes -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Window background and system bars -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorSurface</item>
        
        <!-- System bar appearance -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Elevation overlay for depth perception -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">@color/elevationOverlay</item>
        
        <!-- System bar behavior -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <!-- Launch screen theme -->
    <style name="Theme.App.Launcher" parent="Theme.App">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- Button styles with accessibility optimizations -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="rippleColor">@color/colorOnSurface</item>
        <item name="elevation">2dp</item>
    </style>

    <!-- Icon button style with consistent rendering -->
    <style name="Widget.App.Button.Icon" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="iconPadding">8dp</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="iconTint">@color/colorOnPrimary</item>
        <item name="rippleColor">@color/colorOnSurface</item>
        <item name="elevation">2dp</item>
    </style>

</resources>